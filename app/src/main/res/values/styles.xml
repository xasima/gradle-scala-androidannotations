<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:actionBarStyle">@style/PanActionBar</item>
        <item name="actionBarStyle">@style/PanActionBar</item>

    </style>
    <style name="AppTheme.NoTitleBar" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <!-- ActionBar styles -->
    <style name="PanActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">

        <item name="android:titleTextStyle">@style/PanTitleTextStyle</item>
        <item name="titleTextStyle">@style/PanTitleTextStyle</item>
        <item name="android:icon">@drawable/action_bar_enrollment_logonew</item>
    </style>
    <style name="PanTitleTextStyle">
        <item name="android:textColor">#27a9f4</item>
        <item name="android:textSize">25dp</item>
    </style>
    <style name="TextStyle" parent="android:Widget.Holo.Light.TextView">
        <item name="android:paddingLeft">@dimen/padding_textview</item>
        <item name="android:textSize">@dimen/fontsize_textview</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#000</item>
    </style>
    <style name="DialogButton">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="FooterNavigationButton">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:textSize">20dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="UselessHeaderText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#ddd</item>
    </style>
    <style name="ListItemText">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ListItemCheckbox">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="WarningStyle">
        <item name="android:maxLines">3</item>
        <item name="android:ellipsize">end</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">#fff69c</item>
        <item name="android:textSize">20dp</item>
    </style>


    <style name="DetailsTableCell">
        <item name="android:maxLines">2</item>
        <item name="android:textSize">16dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:shrinkColumns">true</item>
    </style>

</resources>